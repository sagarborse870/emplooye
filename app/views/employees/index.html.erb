<div class="col-lg-12">
	<div class="card rounded-2 mt-5 mb-5">
		<div class= "card-body">
			<h1 class="text-center">STUDENT DATA</h1>
		</div>
	</div>
	<%= link_to "Create New Student", new_employee_path, class:"btn btn-primary btn-lg mb-4" %>
	<table class="table table-bordered table-info table-striped">
		<thead>
			<tr>
				<th>name</th>
				<th>city</th>
				<th>mobile</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<%@employee.each do |employee| %>
				<tr>
					<td> <%= employee.fname %> <%= employee.lname %></td>
					<td> <%= employee.email %></td>
					<td> <%= employee.city %></td>
					<td> <%= employee.pincode
					 %></td>
					<td> <%= employee.mobile %></td>
					<td>
						<%=link_to "Edit", edit_employee_path(employee), class:"btn btn-primanry btn-lg mb-6"%>
						<%=link_to "Edit", edit_employee_path(employee), class:"btn btn-primanry btn-lg mb-6"%>
						<%=link_to "View", employee_path(employee), class:"btn btn-info btn-lg mb-6"%>
						<%=link_to "Delete", employee_path(employee), class:"btn btn-danger btn-lg mb-6", method: :delete, data:{ method: :delete, confirm:"Are Sure Delete Student Data?" }%>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>